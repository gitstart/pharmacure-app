<?xml version="1.0" encoding="utf-8"?>
   <com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
       android:layout_margin="5dp"
       android:elevation="4dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@id/cardView12"
               android:layout_width="150dp"
               android:layout_height="100dp"
               android:padding="5dp"
               app:layout_constraintBottom_toTopOf="@+id/productName"
               app:layout_constraintCircleRadius="5dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent">

               <ImageView
                   android:id="@+id/product_image"
                   android:layout_width="0dp"
                   android:layout_height="0dp"
                   android:contentDescription="@string/image_default__image"
                   android:scaleType="fitXY"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   tools:srcCompat="@drawable/default_image" />

           </androidx.constraintlayout.widget.ConstraintLayout>


           <TextView
               android:id="@+id/productName"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_marginStart="4dp"
               android:layout_marginTop="4dp"
               android:layout_marginEnd="4dp"
               android:textAlignment="viewStart"
               android:textColor="@color/text__primary_dark"
               android:textSize="@dimen/font_title_size"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/cardView12"
               tools:text="@string/item_product_name" />

           <TextView
               android:id="@+id/currenceTextView"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_marginStart="4dp"
               android:layout_marginTop="4dp"
               android:layout_marginEnd="4dp"
               android:text="@string/price_ugx"
               android:textAlignment="viewStart"
               android:textColor="@color/global__primary"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/productName"
               tools:text="@string/price_ugx" />


           <TextView
               android:id="@+id/productPrice"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="4dp"
               android:layout_marginTop="4dp"
               android:textAlignment="viewStart"
               android:textColor="@color/global__primary"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/productName"
               tools:text="@string/item_product_price" />

           <TextView
               android:id="@+id/productCategory"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_marginStart="4dp"
               android:layout_marginTop="4dp"
               android:layout_marginEnd="4dp"
               android:maxLines="2"
               android:textAlignment="viewStart"
               android:textColor="@color/text__primary"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/productPrice"
               tools:text="Description" />
           <!--        rateByServer="@{item.ratingDetails.totalRatingValue}"-->
           <RatingBar
               android:id="@+id/ratingBar"
               style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
               android:layout_width="wrap_content"
               android:layout_height="0dp"
               android:layout_marginStart="4dp"
               android:layout_marginTop="4dp"
               android:numStars="5"
               android:theme="@style/RatingBar"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/productCategory" />

           <TextView
               android:id="@+id/ratingValueTextView"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="4dp"
               android:layout_marginTop="4dp"
               android:layout_marginBottom="4dp"
               android:text="@string/review_text_view"
               android:textColor="@color/text__primary"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/ratingBar" />

           <TextView
               android:id="@+id/productReviewCount"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="4dp"
               android:layout_marginTop="4dp"
               android:text="3,430"
               android:textColor="@color/text__primary"
               app:layout_constraintStart_toEndOf="@+id/ratingValueTextView"
               app:layout_constraintTop_toBottomOf="@+id/ratingBar"
               />

           <ImageButton
               android:id="@+id/addToCartButton"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_marginEnd="0dp"
               android:layout_marginBottom="0dp"
               android:tint="#FFC107"
               android:backgroundTint="@color/white"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:srcCompat="@drawable/ic_action_name" />
       </androidx.constraintlayout.widget.ConstraintLayout>


   </com.google.android.material.card.MaterialCardView>

